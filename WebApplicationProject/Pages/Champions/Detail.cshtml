@page
@model WebApplicationProject.Pages.Champions.DetailModel
@{
    ViewData["Title"] = "Detail";
}
<head>
    <link href="~/css/DetailPicture.css" rel="stylesheet" type="text/css">
</head>

<h2 style="font-style:italic;" >Champion Information</h2>

<body>
    @{ 
        var photosPath = "~/Photos/" + Model.Champion.LinkUrl;
        var videoPath = "~/Videos/" + Model.Champion.VideoUrl;

    }

    <div style="margin-top:30px;">

        <img src="@photosPath" asp-append-version="true"/>
    </div>
   


    <div class="form-row " style="text-align:center">
        <div class="form-group col-sm-12">
            <h1>@Model.Champion.Name</h1>
        </div>

    </div>

    <div class="form-row" style="text-align:center">
        <div class="form-group col-sm-6">
            <h3 style="font-style:italic" > Role </h3>
        </div>

        <div class="form-group col-sm-6">
            <h3 style="font-style:italic"> Lore </h3>
        </div>
    </div>

    <div class="form-row" style=" text-align:center">
        <div class="form-group col-sm-6" style="margin-top:40px; font-size:17px">
            @Model.Champion.Role
        </div>
        <div class="form-group col-sm-6" style="font-size:17px;">
            @Model.Champion.Overview
        </div>
    </div>

    <div class="form-row" style="text-align:center">
        <div class="form-group col-sm-12">
            <h3 style="font-style:italic"> Ultimate </h3>
        </div>    
    </div>

    <div class="form-row" style="margin-top:30px; text-align:center">
        <div class="form-group col-sm-6" style="font-size:17px">
            <p style="text-transform:uppercase; font-style:italic">  @Model.Champion.UltimateName </p>
            <br />
            <br />
            <br />
            @Model.Champion.UltimateDesc
            <br />

        </div>
        <div class="form-group col-sm-6">
            
            <img src="@videoPath" asp-append-version="true"   />

        </div>

    </div>




    <a asp-page="./List" class="btn btn-primary">All Champions</a>
</body>


